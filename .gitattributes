# Auto normalize text files to use LF in repo
* text=auto

# JavaScript / JSX / TypeScript
*.js  text eol=lf
*.jsx text eol=lf
*.ts  text eol=lf
*.tsx text eol=lf

# JSON / YAML / Config files
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.env  text eol=lf

# HTML / CSS / SCSS
*.html text eol=lf
*.css  text eol=lf
*.scss text eol=lf

# Markdown / Docs
*.md   text eol=lf
*.txt  text eol=lf

# Shell scripts (important for UNIX compatibility)
*.sh   text eol=lf

# Ignore binaries
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.svg  binary
*.ico  binary
*.ttf  binary
*.woff binary
*.woff2 binary
*.eot  binary
*.mp4  binary
*.mov  binary
*.zip  binary
*.exe  binary

# Windows batch scripts
*.bat  text eol=crlf
*.cmd  text eol=crlf
